{
    "compilerOptions": {
      "target": "es6",                                
      "module": "commonjs",                   
      "strict": true,                           
      "esModuleInterop": true,                  
      "inlineSourceMap": true,
      "inlineSources": true,                   
      "skipLibCheck": true,                     
      "forceConsistentCasingInFileNames": true, 
      "outDir": "dist",
      "allowJs": true
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules/"]
}
